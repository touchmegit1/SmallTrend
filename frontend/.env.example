# ===================================
# SMALLTREND POS - FRONTEND CONFIGURATION
# ===================================
# Copy file này thành .env và điền thông tin thật

# ===================================
# API CONFIGURATION
# ===================================
# URL backend API (không có trailing slash)
VITE_API_BASE_URL=http://localhost:8080/api

# Timeout cho API calls (milliseconds)
VITE_API_TIMEOUT=30000

# ===================================
# AUTHENTICATION
# ===================================
# Key để lưu JWT token trong localStorage
VITE_TOKEN_KEY=smalltrend_token
VITE_REFRESH_TOKEN_KEY=smalltrend_refresh_token

# ===================================
# APP CONFIGURATION
# ===================================
VITE_APP_NAME=SmallTrend POS
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_LANGUAGE=vi

# ===================================
# FEATURE FLAGS
# ===================================
# Sử dụng mock data từ db.json thay vì API thật
VITE_ENABLE_MOCK_DATA=false

# Bật/tắt chế độ debug (hiển thị log chi tiết)
VITE_ENABLE_DEBUG=true

# ===================================
# PAGINATION
# ===================================
# Số items mặc định trên mỗi trang
VITE_DEFAULT_PAGE_SIZE=20

# Số items tối đa có thể lấy trong 1 request
VITE_MAX_PAGE_SIZE=100

# ===================================
# BUSINESS RULES (Quy định cửa hàng)
# ===================================
# Đơn vị tiền tệ
VITE_CURRENCY=VND

# Thuế VAT (10% cho Việt Nam)
VITE_TAX_RATE=0.1

# Ngưỡng cảnh báo sản phẩm sắp hết hàng
VITE_LOW_STOCK_THRESHOLD=10

# Số điểm tích lũy trên 1000đ
VITE_LOYALTY_POINTS_PER_1000=1

# ===================================
# FILE UPLOAD
# ===================================
# Kích thước file upload tối đa (MB)
VITE_MAX_FILE_SIZE=10

# Các định dạng ảnh cho phép
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
